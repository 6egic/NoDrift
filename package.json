{
  "name": "nodrift",
  "version": "2.0.0",
  "description": "Smart Contract State Verification (Enterprise Edition) - Monitor and verify Ethereum smart contract state with plugins, events, and advanced architecture. Perfect for CI/CD, audits, and drift detection.",
  "keywords": [
    "ethereum",
    "smart-contracts",
    "verification",
    "ci-cd",
    "blockchain",
    "devops",
    "typescript",
    "junit",
    "test-reporting"
  ],
  "homepage": "https://github.com/your-org/nodrift#readme",
  "bugs": {
    "url": "https://github.com/your-org/nodrift/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/your-org/nodrift.git"
  },
  "license": "MIT",
  "author": "Nodrift Contributors",
  "type": "commonjs",
  "main": "dist/index.js",
  "types": "./dist/index.d.ts",
  "bin": {
    "nodrift": "dist/cli.js"
  },
  "directories": {
    "doc": "docs",
    "example": "examples"
  },
  "files": [
    "dist",
    "examples",
    "templates",
    "nodrift.schema.json",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsx src/cli.ts",
    "start": "node dist/cli.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest --testPathPattern='src/.*\\.test\\.ts$'",
    "test:integration": "jest --testPathPattern='tests/integration'",
    "test:e2e": "npm run build && jest --testPathPattern='tests/e2e'",
    "test:ci": "jest --ci --coverage --maxWorkers=2",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules coverage",
    "pretest": "npm run type-check",
    "prepublishOnly": "npm run clean && npm install && npm run build && npm test"
  },
  "dependencies": {
    "@types/inquirer": "^9.0.9",
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "dotenv": "^16.3.1",
    "ethers": "^6.9.0",
    "inquirer": "^13.1.0",
    "js-yaml": "^4.1.0",
    "uuid": "^13.0.0",
    "zod": "^4.3.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "^20.10.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "prettier": "^3.1.1",
    "ts-jest": "^29.1.1",
    "tsx": "^4.7.0",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
